@page
@model UniScheduleWeb.Pages.Discipline.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Список дисциплін</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-primary">Створити нову</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Discipline[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discipline[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discipline[0].Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discipline[0].SubGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discipline[0].ClassesCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Discipline)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubGroup)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassesCount)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
